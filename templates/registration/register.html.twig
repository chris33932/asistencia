{% extends 'base.html.twig' %}

{% block title %}Registrar{% endblock %}

{% block body %}

<div class="container" style="width:60%">
    <h1>Registro nuevo usuaio</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.nombre) }}
        {{ form_row(registrationForm.apellido) }}
        {{ form_row(registrationForm.dni) }}
        {{ form_row(registrationForm.domicilio) }}
        {{ form_row(registrationForm.contacto) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.area) }}

        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}



          <button class="btn btn-primary" style="margin: 10px" type="submit">Registrar</button>
    {{ form_end(registrationForm) }}


</div>
{% endblock %}


